{
    "version": 2,
    "builds": [
      {
        "src": "frontend/vite.config.ts",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      },
      {
        "src": "backend/server.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/dist/index.html"
      }
    ]
  }